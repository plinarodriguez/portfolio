    <%= yield %>

  </main>
  <footer class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <hr/>
        <a href="https://github.com/plinarodriguez" target="_blank"><%= image_tag "git.jpg", width: "60em" %></a>
        <a href="https://plus.google.com/112839409071390686234/about" target="_blank">
        	<%= image_tag "google_plus.jpg", width: "50em" %></a> 
      </div>
    </div>
  </footer>
<!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </body>
</html>
